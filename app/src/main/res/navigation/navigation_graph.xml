<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/settingsFragment">
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.quiz.fragments.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" >
        <action
            android:id="@+id/navegateToRanking"
            app:destination="@id/rankingFragment" />
        <action
            android:id="@+id/navegateToSettings"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_gameFragment_to_finishGameFragment"
            app:destination="@id/finishGameFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.quiz.fragments.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings"/>
    <fragment
        android:id="@+id/rankingFragment"
        android:name="com.example.quiz.fragments.RankingFragment"
        android:label="fragment_ranking"
        tools:layout="@layout/fragment_ranking" />
    <fragment
        android:id="@+id/finishGameFragment"
        android:name="com.example.quiz.fragments.FinishGameFragment"
        android:label="fragment_finish_game"
        tools:layout="@layout/fragment_finish_game" >
        <action
            android:id="@+id/navegateToSettings"
            app:destination="@id/settingsFragment" />
    </fragment>
</navigation>